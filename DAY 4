code 1:
#include <iostream>
using namespace std;

int main() {
	int n,x,y,z;
	cin>>n;
	for(int i=1;i<=n;i++){
	    cin>>x>>y;
	    if(x>=y){
	        cout<<y*1<<endl;
	    }
	    else if(x<y){
	        cout<<x+(y-x)*2<<endl;
	    }
	    
	}
	return 0;
}

code 2:
#include <iostream>

using namespace std;

int main() {
    int n,l,v1,v2,t,r,final;
    cin >> n;

    for (int i =1; i<=n; i++) {
        cin >> l >> v1 >> v2;

        t= (l + v1 - 1) / v1;
        r = (l + v2 - 1) / v2;

        final= t-r-1;
        cout <<final<< endl;
    }

    return 0;
}
